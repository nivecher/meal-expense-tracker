# .env.sample
# Copy this file to .env and fill in your secrets and configuration values

# Flask configuration
FLASK_APP=wsgi:app
FLASK_ENV=development

# Flask secret key (use a random value in production)
SECRET_KEY=your-secret-key-here

# SQLite database URI (default for local dev)
SQLALCHEMY_DATABASE_URI=sqlite:///instance/meal_expenses.db

# Google Maps API Key (optional, for map features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
