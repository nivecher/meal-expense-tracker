# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 120

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2

# Makefiles use real tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
shell = bash
indent_style = space
indent_size = 2

# Docker files
[Dockerfile]
indent_style = space
indent_size = 4

# Terraform files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2
