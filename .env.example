# Docker compose example
# Flask
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/meal_expense_tracker

# AWS Configuration (if using AWS services)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# AWS Secrets Manager Configuration
# Set to "true" to enable fetching secrets from AWS Secrets Manager
AWS_SECRETS_MANAGER_ENABLED=false
# ARN of the secret containing the Google Places API key
# GOOGLE_PLACES_API_KEY_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:google-places-api-key-xxxxxx

# Development-only API key (not recommended for production)
# GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Other environment variables
# DEBUG=True
