[general]
ignore=body-first-line-empty, body-max-line-length, title-max-line-length

[rule "T1"]
regex = ^([a-z]+)\([a-z0-9_\-]+\): .+
message = Title must match format: <type>(<scope>): <description>

[rule "T2"]
regex = ^([a-z]+)\([a-z0-9_\-]+\): .+
message = Title must start with a valid type
valid_types = feat, fix, docs, style, refactor, perf, test, chore, ci, build
